<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="4"
    android:rowCount="2">

    <TextView
        android:id="@+id/idJogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/listagem_jogadores_marginleft"
        android:layout_marginTop="@dimen/listagem_jogadores_margintop"
        android:text="@string/listagem_jogadores_id"
        android:layout_columnWeight="1" />

    <TextView
        android:id="@+id/posicaoJogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/listagem_jogadores_marginleft"
        android:layout_marginTop="@dimen/listagem_jogadores_margintop"
        android:text="@string/listagem_jogadores_posicao"
        android:layout_columnWeight="1" />

    <TextView
        android:id="@+id/nomeJogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/listagem_jogadores_marginleft"
        android:layout_marginTop="@dimen/listagem_jogadores_margintop"
        android:text="@string/listagem_jogadores_nome"
        android:layout_columnWeight="1" />

    <TextView
        android:id="@+id/habilidadeJogador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/listagem_jogadores_marginleft"
        android:layout_marginTop="@dimen/listagem_jogadores_margintop"
        android:text="@string/listagem_jogadores_habilidade"
        android:layout_columnWeight="1" />

</GridLayout>